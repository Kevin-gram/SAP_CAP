{
  "xsappname": "bookshop",
  "tenant-mode": "dedicated",
  "scopes": [
    {
      "name": "$XSAPPNAME.Admin",
      "description": "Admin Role"
    },
    {
      "name": "$XSAPPNAME.User",
      "description": "User Role"
    },
    {
      "name": "$XSAPPNAME.Read",
      "description": "Read books"
    },
    {
      "name": "$XSAPPNAME.Create",
      "description": "Create books"
    },
    {
      "name": "$XSAPPNAME.Update",
      "description": "Update books"
    },
    {
      "name": "$XSAPPNAME.Delete",
      "description": "Delete books"
    }
  ],
  "role-templates": [
    {
      "name": "BookshopAdmin",
      "description": "Book Shop Administrator",
      "scope-references": [
        "$XSAPPNAME.Admin",
        "$XSAPPNAME.Create",
        "$XSAPPNAME.Update",
        "$XSAPPNAME.Delete"
      ]
    },
    {
      "name": "BookshopUser",
      "description": "Book Shop User",
      "scope-references": [
        "$XSAPPNAME.User",
        "$XSAPPNAME.Read"
      ]
    }
  ]
}