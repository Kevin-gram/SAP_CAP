{
  "name": "bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^8.6.0",
    "@sap/xssec": "^3",
    "@sap/xsenv": "^3.4.0",
    "express": "^4",
    "passport": "^0.6.0",
    "sqlite3": "^5.1.7", 
    "@sap/hana-client": "^2.17.22",  
    "hdb": "^0.19.0"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.8.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8.6.1",
    "@sap/hdi-deploy": "^4.6.0",
    "chai": "^5.1.2",
    "mocha": "^11.0.1",
    "sinon": "^19.0.2",
    "mbt": "^1.2.18"
  },
  "scripts": {
    "start": "cds run",
    "build": "cds build/all",
    "deploy": "cf deploy mta_archives/bookshop_1.0.0.mtar",
    "build:mta": "mbt build",
    "watch": "cds watch",
    "deploy:local": "cds deploy --to sqlite",  
    "deploy:hana": "cds deploy --to hana"     
  },
  "cds": {
    "requires": {
      "db": {
        "[production]": {
          "kind": "hana"
        },
        "[development]": {
          "kind": "sqlite",
          "credentials": {
            "url": "db.sqlite"
          }
        }
      },
      "auth": {
        "[production]": {
          "kind": "xsuaa"
        },
        "[development]": {
          "kind": "mock"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "sapux": [
    "app/admin-books",
    "app/browse"
  ],
  "engines": {
    "node": "^18"
  }
}
